<!DOCTYPE html>
<html class="no-js">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="Content-Security-Policy" content="base-uri 'self'; default-src 'self'; style-src \'unsafe-inline\' \'self\'; img-src \'self\' data: https://aimeos.org; frame-src https://www.youtube.com https://player.vimeo.com">

		<link type="text/css" rel="stylesheet" href="{{ asset('bundles/aimeosshop/themes/default/app.css') }}">
	    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/aimeosshop/themes/default/aimeos.css') }}" />

		{% block aimeos_styles %}{% endblock %}

		<link rel="preload" href="{{ asset('bundles/aimeosshop/themes/default/assets/roboto-condensed-v19-latin-regular.woff2') }}" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="{{ asset('bundles/aimeosshop/themes/default/assets/roboto-condensed-v19-latin-700.woff2') }}" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="{{ asset('bundles/aimeosshop/themes/default/assets/bootstrap-icons.woff2') }}" as="font" type="font/woff2" crossorigin>

		{% block aimeos_header %}{% endblock %}

	</head>
	<body>
		<nav class="navbar navbar-expand-md navbar-top">
			<a class="navbar-brand" href="/" title="To the home page">
				<img src="https://aimeos.org/media/logo-white.svgz" height="40" title="Logo">
			</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-top" aria-controls="navbar-top" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbar-top">
				{% block aimeos_nav %}{% endblock %}
			</div>

			{% block aimeos_head %}{% endblock %}
		</nav>

		<div class="content">
	        {% block aimeos_stage %}{% endblock %}
			<main>
	            {% block aimeos_body %}{% endblock %}
	            {% block content %}{% endblock %}
			</main>
		</div>


		<footer>
			<div class="container">
				<div class="row">
					<div class="col-md-8">
						<div class="row">
							<div class="col-sm-6 footer-left">
								<div class="footer-block">
									<h2 class="pb-3">LEGAL</h2>
									<p><a href="#">Terms &amp; Conditions</a></p>
									<p><a href="#">Privacy Notice</a></p>
									<p><a href="#">Imprint</a></p>
								</div>
							</div>
							<div class="col-sm-6 footer-center">
								<div class="footer-block">
									<h2 class="pb-3">ABOUT US</h2>
									<p><a href="#">Contact us</a></p>
									<p><a href="#">Company</a></p>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-4 footer-right">
						<div class="footer-block">
							<a class="logo" href="/" title="Logo">
							    <img src="https://aimeos.org/media/logo-white.svgz" height="40" title="Logo">
							</a>
							<div class="social">
								<p><i class="bi">facebook</i><a href="#" class="sm facebook" title="Facebook" rel="noopener">Facebook</a></p>
								<p><i class="bi">twitter</i><a href="#" class="sm twitter" title="Twitter" rel="noopener">Twitter</a></p>
								<p><i class="bi">instagram</i><a href="#" class="sm instagram" title="Instagram" rel="noopener">Instagram</a></p>
								<p><i class="bi">youtube</i><a href="#" class="sm youtube" title="Youtube" rel="noopener">Youtube</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</footer>


		<a id="toTop" class="back-to-top" href="#" title="Back to top">
			<div class="top-icon"></div>
		</a>

		<script src="{{ asset('bundles/aimeosshop/themes/default/app.js' ) }}"></script>
		<script src="{{ asset('bundles/aimeosshop/themes/default/aimeos.js' ) }}"></script>
		{% block aimeos_scripts %}{% endblock %}
	</body>
</html>
